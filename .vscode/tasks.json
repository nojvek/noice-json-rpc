{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "args": ["run"],
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "test",
            "isBuildCommand": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "mocha-debug"
        }
    ]
}